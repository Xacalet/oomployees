<resources>

    <style name="ClassicOompaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/darkLime</item>
        <item name="colorAccent">@color/darkLime</item>
        <item name="actionBarStyle">@style/ClassicOompaTheme.ActionBar</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ClassicOompaTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/ClassicOompaTheme.ActionBar.TextStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ClassicOompaTheme.ActionBar.TextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
